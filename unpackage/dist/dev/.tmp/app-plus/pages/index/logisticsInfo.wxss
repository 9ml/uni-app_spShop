page {
  background-color: #F5F5F5;
}
.top-main {
  width: 94%;
  height: 60rpx;
  margin: 18rpx auto 18rpx;
  background-color: #FFFFFF;
  font-size: 24rpx;
  line-height: 60rpx;
  border-radius: 16rpx;
  padding-left: 26rpx;
}
.l-main {
  width: 96%;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 auto;
}
.l-main .lm-item {
    width: 98%;
    height: 100rpx;
    margin: 0 auto;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    position: relative;
}
.l-main .lm-item .li-lines {
      width: 4rpx;
      height: 70rpx;
      background-color: #E4E4E4;
      position: absolute;
      bottom: 70rpx;
      left: 104rpx;
}
.l-main .lm-item .li-time {
      width: 10%;
      height: 80rpx;
      text-align: right;
}
.l-main .lm-item .li-time view {
        height: 30rpx;
        line-height: 30rpx;
}
.l-main .lm-item .li-time .lt-top {
        margin-top: 10rpx;
        font-size: 22rpx;
}
.l-main .lm-item .li-time .lt-bom {
        font-size: 18rpx;
        color: #808080;
}
.l-main .lm-item .li-icon {
      width: 10%;
      height: 80rpx;
      text-align: center;
}
.l-main .lm-item .li-icon image {
        width: 36rpx;
        height: 36rpx;
        margin-top: 20rpx;
}
.l-main .lm-item .li-info {
      width: 80%;
      height: 90rpx;
      font-size: 20rpx;
}
.l-main .lm-item .li-info .li-top {
        height: 30rpx;
        line-height: 30rpx;
        margin-top: 10rpx;
}
.l-main .lm-item .li-info .li-bom {
        height: 60rpx;
        color: #555555;
        overflow: hidden;
}
.l-main .lm-item .li-info .li-bom text {
          color: #FF584C;
}

